---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
// import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'HearMeOutCake — Create Digital Character Cake Decorations',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download App',
        href: '#',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'See Features', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'HearMeOutCake App Preview' }}
  >
    <Fragment slot="title">
      Create Your Perfect <span class="text-accent dark:text-white highlight">Character Cake</span> 🎂
    </Fragment>

    <Fragment slot="subtitle">
      Transform your cake decorating experience with HearMeOutCake! Design digital character toppers, customize your
      cake, and share your creations with friends. Join the trend that's making cake decorating more fun and accessible
      than ever.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Features"
    title="Everything You Need for Perfect Cake Decorations"
    subtitle="Create stunning character-topped cakes with our easy-to-use digital platform."
    items={[
      {
        title: 'Upload & Customize',
        description:
          'Upload your favorite character images and easily position them on various cake designs with our drag-and-drop interface.',
        icon: 'tabler:upload',
      },
      {
        title: 'Multiple Cake Themes',
        description: 'Choose from a wide selection of cake designs and themes to match any occasion or celebration.',
        icon: 'tabler:cake',
      },
      {
        title: 'Share Your Creations',
        description:
          'Save and share your cake designs with friends and family through social media or direct messaging.',
        icon: 'tabler:share',
      },
      {
        title: 'Premium Decorations',
        description:
          'Upgrade your designs with premium features like candy cane stands, glitter effects, and custom cake designs.',
        icon: 'tabler:star',
      },
      {
        title: 'Personal Gallery',
        description: 'Store all your cake creations in your personal account for future reference and inspiration.',
        icon: 'tabler:photo',
      },
      {
        title: 'Free to Create',
        description:
          "Get started for free and unlock premium features when you're ready to take your cake decorating to the next level.",
        icon: 'tabler:gift',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="Create Your Perfect Cake in Minutes"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Upload</span>',
        description: 'Upload your favorite character images or choose from our extensive gallery of pre-made designs.',
        icon: 'tabler:upload',
      },
      {
        title: 'Step 2: <span class="font-medium">Customize</span>',
        description:
          'Choose your cake design, arrange your characters, and add decorative elements to make it uniquely yours.',
        icon: 'tabler:paint',
      },
      {
        title: 'Step 3: <span class="font-medium">Share</span>',
        description:
          'Save your creation and share it with friends and family through social media or our built-in sharing features.',
        icon: 'tabler:share',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Premium Features"
    subtitle="Enhance your cake decorating experience with our premium options"
    tagline="Upgrades"
    items={[
      {
        title: 'Custom Cake Designs',
        description: 'Access exclusive cake designs and shapes for unique celebrations.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Premium Stands',
        description: 'Replace traditional wooden sticks with candy canes, sparklers, or themed stands.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Special Effects',
        description: 'Add glitter, animations, and special effects to your cake designs.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Advanced Sharing',
        description: 'Create shareable galleries and collaborate with other decorators.',
        icon: 'flat-color-icons:advertising',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Everything you need to know about HearMeOutCake"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Is HearMeOutCake free to use?',
        description:
          'Yes! The basic features are completely free. Premium features like custom stands and special effects are available through our upgrade options.',
      },
      {
        title: 'Can I save my cake designs?',
        description: 'Absolutely! Create an account to save all your cake designs in your personal gallery.',
      },
      {
        title: 'What image formats are supported?',
        description:
          'We support most common image formats including PNG, JPEG, and GIF. Images should be clear and have a minimum resolution of 300x300 pixels.',
      },
      {
        title: 'How do I share my cake designs?',
        description:
          'You can share your designs directly through the app via social media, or download them to share however you prefer.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->
  <Stats
    stats={[
      { title: 'Active Users', amount: '10+' },
      { title: 'Cakes Created', amount: '100+' },
      { title: 'Available Designs', amount: '♾️' },
      { title: 'Happy Customers', amount: 'ALL' },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Download Now',
        href: '#',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Create Your Perfect Cake? </Fragment>

    <Fragment slot="subtitle"> Join thousands of happy users and start designing your dream cake today! </Fragment>
  </CallToAction>
</Layout>
